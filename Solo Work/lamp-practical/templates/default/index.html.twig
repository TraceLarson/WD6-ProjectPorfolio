{% extends 'base.html.twig' %}

{% block title %}Student Grades Report{% endblock %}

{% block body %}
    <header>
    <h1>Student Grades</h1>
    </header>

    <article>
        <section class="container">
            <h2>Input Student's name and final grade percentage (%)</h2>
            <form class="form">
                <label class="d-none" for="name">Student Name</label>
                <input type="text" name="name" id="name">
                <label class="d-none" for="grade">Grade Percentage</label>
                <input type="text" name="grade" id="grade">
                <button class="btn btn-success">Submit</button>
            </form>
        </section>
        <section>
            Student Grades
        </section>
    </article>


{% endblock %}
