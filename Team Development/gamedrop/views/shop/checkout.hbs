<div class="row">
    <div class="col">
        <h1>Checkout</h1>
        <h4>Your Total: ${{ total }}</h4>

        <form action="/checkout" method="POST" id="checkout-form">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter name" required name="name">
            </div>

            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" placeholder="Enter address" required name="address">
            </div>

            <hr>

            {{!-- Stripe element mountpoint --}}
            <div class="form-group">
                <label for="card-element">Credit or debit card</label>
                <div id="card-element"></div>
            </div>

            {{!-- Used to display form errors --}}
            <div class="alert alert-danger {{#if noError }}hidden{{/if}}" id="card-errors" role="alert">
                {{ errMsg }}
            </div>

            <input type="submit" class="btn btn-success" value="Submit Payment">
        </form>
    </div>
</div>

<script src="javascripts/checkout.js"></script>