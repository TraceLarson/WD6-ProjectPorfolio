<div class="row">
    <div class="col">
        <h1>Rate a Product</h1>
        <p>Itemid: {{ itemId }}</p>
        <div class="alert alert-info" role="alert">
            Please give the product a rating out of 5 stars.
        </div>

        <form action="/rate-product/{{ itemId }}" method="POST">
            <div class="form-group">
                <label for="rating">Rating</label>
                <input type="number" class="form-control" id="rating" value="3" min="1" max="5" required>
            </div>

            <button type="submit" class="btn btn-primary">Submit Rating</button>
        </form>
    </div>
</div>