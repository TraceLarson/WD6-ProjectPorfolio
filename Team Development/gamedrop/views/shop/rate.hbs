<div class="row">
    <div class="col">
        <h1>Rate <span class="font-italic font-weight-bold">{{ product.title }}</span></h1>

        <div class="row">
            <div class="col-6 text-center">
                <div class="alert alert-info" role="alert">
                    Please rate the product out of 5 stars
                </div>
                <div class="card mb-2">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.title }}</h5>
                        
                        {{#if product.rating }}
                            <span class="badge badge-pill badge-warning">Rating: {{ product.rating }} / 5</span> | <span class="badge badge-pill badge-warning">Total Ratings: {{ product.numRatings }}</span>
                        {{else}}
                            <span class="badge badge-pill badge-warning">No Rating</span>
                            <span class="badge badge-success d-block mt-3 py-2">Be the first to rate!</span>
                        {{/if}}    
                        
                        <p class="card-text text-muted">{{ this.description }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 mx-auto">
                        <form action="/rate-product/{{ product._id }}" method="POST">
                            <div class="form-group">
                                <label for="rating">Rating</label>
                                <input type="number" class="form-control w-50 mx-auto" id="rating" value="3" min="1" max="5"
                                    required name="rating">
                            </div>

                            <button type="submit" class="btn btn-primary">Submit Rating</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>