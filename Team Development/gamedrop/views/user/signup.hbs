<h1>Sign Up</h1>
{{#if hasErrors }} {{!-- Check if there are server side validation errors --}}
    {{#each messages }} {{!-- Loop through error messages and output them to view --}}
        <div class="alert alert-danger" role="alert">
            {{ this }}
        </div>
    {{/each}}
{{/if}}
<form action="" method="POST">
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" name="email">
    <small id="emailHelp" class="form-text text-muted">We respect your privacy. We'll never share your information with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="passport">Password</label>
    <input type="password" class="form-control" id="passport" placeholder="Password" name="password">
  </div>
  <input type="hidden" name="_csrf" value="{{ csrfToken }}">
  <button type="submit" class="btn btn-primary">Sign Up</button>
</form>